{
  "dashboard": {
    "title": "Catalog Service Overview",
    "tags": ["catalog", "performance", "monitoring"],
    "timezone": "browser",
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Request Rate",
        "type": "graph",
        "gridPos": { "x": 0, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(catalog_http_requests_total[5m])",
            "legendFormat": "{{method}} {{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "reqps", "label": "Requests/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 2,
        "title": "Response Time (p95)",
        "type": "graph",
        "gridPos": { "x": 12, "y": 0, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(catalog_http_request_duration_seconds_bucket[5m]))",
            "legendFormat": "{{route}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short" }
        ],
        "alert": {
          "conditions": [
            {
              "evaluator": { "params": [0.5], "type": "gt" },
              "operator": { "type": "and" },
              "query": { "params": ["A", "5m", "now"] },
              "reducer": { "params": [], "type": "avg" },
              "type": "query"
            }
          ],
          "executionErrorState": "alerting",
          "frequency": "60s",
          "handler": 1,
          "name": "High Response Time",
          "noDataState": "no_data",
          "notifications": []
        }
      },
      {
        "id": 3,
        "title": "Error Rate",
        "type": "graph",
        "gridPos": { "x": 0, "y": 8, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(catalog_http_request_errors_total[5m])",
            "legendFormat": "{{error_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "short", "label": "Errors/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 4,
        "title": "Cache Hit Rate",
        "type": "singlestat",
        "gridPos": { "x": 12, "y": 8, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(rate(catalog_cache_hits_total[5m])) / (sum(rate(catalog_cache_hits_total[5m])) + sum(rate(catalog_cache_misses_total[5m]))) * 100",
            "refId": "A"
          }
        ],
        "format": "percent",
        "valueName": "current",
        "thresholds": "60,80",
        "colors": ["#d44a3a", "#e0b400", "#299c46"]
      },
      {
        "id": 5,
        "title": "Active Catalog Items",
        "type": "singlestat",
        "gridPos": { "x": 18, "y": 8, "w": 6, "h": 4 },
        "targets": [
          {
            "expr": "sum(catalog_active_items)",
            "refId": "A"
          }
        ],
        "format": "short",
        "valueName": "current"
      },
      {
        "id": 6,
        "title": "Search Performance",
        "type": "graph",
        "gridPos": { "x": 0, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.90, rate(catalog_search_duration_seconds_bucket[5m]))",
            "legendFormat": "p90 - {{search_type}}",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(catalog_search_duration_seconds_bucket[5m]))",
            "legendFormat": "p95 - {{search_type}}",
            "refId": "B"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration", "max": 2 },
          { "format": "short" }
        ]
      },
      {
        "id": 7,
        "title": "Database Query Performance",
        "type": "graph",
        "gridPos": { "x": 12, "y": 16, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(catalog_db_query_duration_seconds_bucket[5m]))",
            "legendFormat": "{{operation}} - {{entity}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration" },
          { "format": "short" }
        ]
      },
      {
        "id": 8,
        "title": "Cache Performance by Layer",
        "type": "graph",
        "gridPos": { "x": 0, "y": 24, "w": 24, "h": 8 },
        "targets": [
          {
            "expr": "rate(catalog_cache_hits_total{layer=\"L1\"}[5m])",
            "legendFormat": "L1 Hits",
            "refId": "A"
          },
          {
            "expr": "rate(catalog_cache_hits_total{layer=\"L2\"}[5m])",
            "legendFormat": "L2 Hits",
            "refId": "B"
          },
          {
            "expr": "rate(catalog_cache_misses_total{layer=\"L1\"}[5m])",
            "legendFormat": "L1 Misses",
            "refId": "C"
          },
          {
            "expr": "rate(catalog_cache_misses_total{layer=\"L2\"}[5m])",
            "legendFormat": "L2 Misses",
            "refId": "D"
          }
        ],
        "yaxes": [
          { "format": "ops", "label": "Operations/sec" },
          { "format": "short" }
        ]
      },
      {
        "id": 9,
        "title": "Recommendation Performance",
        "type": "graph",
        "gridPos": { "x": 0, "y": 32, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "histogram_quantile(0.90, rate(catalog_recommendation_duration_seconds_bucket[5m]))",
            "legendFormat": "p90 - {{recommendation_type}}",
            "refId": "A"
          }
        ],
        "yaxes": [
          { "format": "s", "label": "Duration", "max": 1 },
          { "format": "short" }
        ]
      },
      {
        "id": 10,
        "title": "Business Metrics",
        "type": "graph",
        "gridPos": { "x": 12, "y": 32, "w": 12, "h": 8 },
        "targets": [
          {
            "expr": "rate(catalog_item_views_total[5m])",
            "legendFormat": "Views/sec",
            "refId": "A"
          },
          {
            "expr": "rate(catalog_item_favorites_total[5m])",
            "legendFormat": "Favorites/sec",
            "refId": "B"
          },
          {
            "expr": "rate(catalog_item_shares_total[5m])",
            "legendFormat": "Shares/sec",
            "refId": "C"
          }
        ],
        "yaxes": [
          { "format": "ops", "label": "Events/sec" },
          { "format": "short" }
        ]
      }
    ],
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "timepicker": {
      "refresh_intervals": ["5s", "10s", "30s", "1m", "5m", "15m", "30m", "1h"]
    },
    "version": 1
  }
}
