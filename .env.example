# Application
NODE_ENV=development
PORT=3000

# CORS Configuration
# In production, specify exact origins separated by commas
# Example: CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=http://localhost:3000,http://localhost:3001,http://localhost:4200

# PostgreSQL
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_DB=fashion_wallet

# MongoDB
MONGODB_URI=mongodb://localhost:27017/fashion_wallet

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Authentication
# SECURITY: Change these secrets in production! Use strong random values (min 32 characters)
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars
JWT_EXPIRATION=1d
JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production-min-32-chars
JWT_REFRESH_EXPIRATION=30d

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=100
THROTTLE_AUTH_LIMIT=10
THROTTLE_UPLOAD_LIMIT=20

# File Upload Limits (in bytes)
MAX_FILE_SIZE_IMAGE=5242880
MAX_FILE_SIZE_MODEL_3D=52428800
MAX_FILE_SIZE_TEXTURE=10485760
MAX_FILE_SIZE_PATTERN=5242880

# AWS S3 / MinIO
STORAGE_TYPE=local
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=fashion-wallet-assets
S3_REGION=us-east-1

# Elasticsearch (for catalog search)
ELASTICSEARCH_NODE=http://localhost:9200
ELASTICSEARCH_USERNAME=
ELASTICSEARCH_PASSWORD=

# Pinecone (for visual search)
PINECONE_API_KEY=
PINECONE_ENVIRONMENT=
PINECONE_INDEX_NAME=fashion-items-visual
